<div class="col-sm-6 col-sm-offset-3">
<div class="panel panel-default">
<div class="panel-heading">



    <h1><span class="fa fa-sign-in"></span>Add New Report</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %></div>
	<div class="panel-body">
    <!-- LOGIN FORM -->
    <form action="/addNewReport" method="post">

            
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Add Report URL</label>
            <input type="password" class="form-control" name="reportURL">
        </div>

        
        <div class="form-group">
  <label for="sel1">Reports Number:</label>
  <select class="form-control" id="sel1" name="reportNumber">
    <option>myreports1</option>
    <option>myreports2</option>
    <option>myreports3</option>
    <option>myreports4</option>
	<option>myreports5</option>
    <option>myreports6</option>
    <option>myreports7</option>
    <option>myreports8</option>
  </select>
</div>
        <button type="submit" class="btn btn-warning btn-lg">Register</button>
    </form>

    <hr>

   
</div>
	</div>
</div>