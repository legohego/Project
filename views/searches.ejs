

    <button type="button" class="btn btn-default" ng-click="myFuncV3()" >New Products</button>

    <div class="panel panel-default">

        <div class="panel-body">
              
            
    <form name="myFormi" ng-show="showMeV3" ng-click="click()" class="form-inline" role="form"  novalidate>
        <div class="form-group">
            <label for="ProductID">Product_ID:  </label>
            

            
           <input ng-model="ProductID" required type="text" class="form-control" id="ProductID" placeholder="ProductID" name="ProductID" > 
            
            
        </div>
        <div class="form-group">

            <label for="ProductName">Product_Name:</label>
          
            
 
<input ng-model="ProductName" required type="text"class="form-control" id="ProductName" placeholder="Product Name" name="ProductName" >
                
           
        </div>

        <div class="form-group">
            <label for="SupplierID">Supplier_ID:  </label>
            
            
            <input ng-model="SupplierID" required type="text" class="form-control" id="SupplierID" placeholder="SupplierID" name="SupplierID" >
            
        </div>
        <div class="form-group">
            <label for="CategoryID">CategoryID:</label>
            <input type="text" class="form-control" id="CategoryID" placeholder="Enter CategoryID:">
        </div>
        <div class="form-group">
            <label for="QuantityPerUnit">Quant_Per_Unit:</label>
                        
                <input ng-model="QuantityPerUnit" required type="text" class="form-control" id="QuantityPerUnit" placeholder="QuantityPerUnit" name="QuantityPerUnit" >
        </div>
        <div class="form-group">
            <label for="UnitPrice">Unit_Price:</label>
           
            
            
            
             <input ng-model="UnitPrice" required type="text" class="form-control" id="UnitPrice" placeholder="UnitPrice" name="QuantityPerUnit" >
        </div>
        <div class="form-group">
            <label for="UnitInStock">StockLevel:</label>
            <input type="text" class="form-control" id="UnitInStock" placeholder="Enter StockLevel:">

        </div>
        <div class="form-group">
            <label for="UnitsOnOrder">Units_On_Order:</label>
          
            
              <input ng-model="UnitsOnOrder" required type="text" class="form-control" id="UnitsOnOrder" placeholder="UnitsOnOrder" name="UnitsOnOrder" >
            
        </div>
        <div class="form-group">
            <label for="ReorderLevel">ReorderLevel:</label>
          
            
            <input ng-model="ReorderLevel" required type="text" class="form-control" id="ReorderLevel" placeholder="ReorderLevel" name="ReorderLevel" >
        </div>
       
        <div class="form-group">
            <label for="Discontinued">Discontinued:</label>
                      
              <input ng-model="Discontinued" required type="text" class="form-control" id="Discontinued" placeholder="Discontinued" name="Discontinued" >
        </div>
<br><br>

        <div class="btn-group">
             <input type="submit" ng-disabled="myFormi.ProductName.$untouched && myFormi.ProductName.$invalid ||myFormi.Discontinued.$untouched && myFormi.Discontinued.$invalid ||myFormi.ReorderLevel.$untouched && myFormi.ReorderLevel.$invalid||myFormi.UnitsOnOrder.$untouched && myFormi.UnitsOnOrder.$invalid ||myFormi.UnitInStock.$untouched && myFormi.UnitInStock.$invalid ||myFormi.QuantityPerUnit.$untouched && myFormi.QuantityPerUnit.$invalid||myFormi.SupplierID.$untouched && myFormi.SupplierID.$invalid ||myFormi.ProductID.$untouched && myFormi.ProductID.$invalid" class="btn btn-primary"  >
            <button type="button" class="btn btn-primary" ng-click="myFuncV3()">Hide</button>
        </div>
    </form>



    <form name="myForm" ng-show="showMe" class="form-horizontal" role="form" novalidate>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Employee Name:</label>
            <div class="col-xs-2">
                <input ng-model="name" required type="text" class="form-control" id="name" placeholder="name" name="name" >
                
                <span style="color:red" ng-show="myForm.name.$dirty && myForm.name.$invalid">
<span ng-show="myForm.name.$error.required">Username is required.</span>
</span>
            </div>
        </div>



        <div class="btn-group">
            <input type="submit" ng-disabled="myForm.name.$untouched && myForm.name.$invalid " ng-click="click();myFuncV2()" class="btn btn-primary"  >
            <button type="button" ng-click="myFuncV4()" class="btn btn-primary">Clear</button>
            <button type="button" ng-click="myFuncV5()" class="btn btn-primary">Hide</button>
        </div>
    </form>


    <table ng-show="showMeV2" class="table table-hover" >
        <thead>
        <tr><th colspan="6">Staff Details Report</th></tr>
        <tr>
            <th text-align="center">LastName</th>
            <th align="center">FirstName</th>
            <th align="center">Title</th>
            <th text-align="center">City</th>
            <th align="center">Region</th>
            <th align="center">PostalCode</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td data-ng-bind="empes.LastName" />
            <td data-ng-bind="empes.FirstName" />
            <td data-ng-bind="empes.Title" />
            <td data-ng-bind="empes.City" />
            <td data-ng-bind="empes.Region" />
            <td data-ng-bind="empes.PostalCode" />

        <tr>
        </tbody>

    </table>
        </div>
</div>